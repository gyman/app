<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8"/>
    <title>{% block title %}Gyman.pl{% endblock %}</title>

    {% block stylesheets %}
        {% if app.environment == "prod" %}
            <link rel="stylesheet" href="{{ asset("/css/vendors.min.css") }}"/>
            <link rel="stylesheet" href="{{ asset("/css/project.min.css") }}"/>
        {% else %}
            <link rel="stylesheet" href="{{ asset("/css/vendors.css") }}"/>
            <link rel="stylesheet" href="{{ asset("/css/project.css") }}"/>
        {% endif %}
    {% endblock %}

    <link rel="icon" type="image/x-icon" href="{{ asset("/favicon.ico") }}"/>
</head>

{% block overraid_body %}
    <body class="{% block body_class %}{% endblock %}">
    <div id="spinner">Ładuję...</div>

    <div id="header">
        <div class="navbar">
            <div class="navbar-inner">
                <div class="container-fluid">

                    <a href="{{ path("gyman_app_default_index") }}" class="brand">
                        {% if club.details.logo is not null %}
                            {% set logo = club.subdomain.name ~ '/' ~ club.details.logo %}
                            <img src="{{ asset('uploads/gallery/' ~ logo) }}" id="applogo"/>
                        {% else %}
                            <img src="{{ asset('bundles/gymanapp/images/gyman_logo.png') }}" id="applogo"/>
                        {% endif %}
                        <span id="appname">{{ club.name }}</span>
                    </a>

                    {% if app.user is not null %}
                        <div class="nav-no-collapse">
                            <ul class="nav pull-right usernav">
                                <li>
                                    <form name="search" method="post" action="{{ path("gyman_members_search") }}" class="form-search">
                                        <input id="search_query" name="search[query]" class="input-medium search-query nostyle" type="text">
                                        <button type="submit" class="btn">Szukaj</button>
                                    </form>
                                </li>
                            </ul>
                        </div>
                    {% else %}
                        <div class="nav-no-collapse">
                            <ul class="nav pull-right usernav">
                                <li>
                                    <a href="{{ path("fos_user_security_login") }}">zaloguj</a>
                                </li>
                            </ul>
                        </div>
                    {% endif %}
                </div>
            </div>
            <!-- /navbar-inner -->
        </div>
    </div>

    <div id="wrapper">
        {% if is_granted('ROLE_MODERATOR') %}
        <div id="sidebarbg"></div>

        <div id="sidebar">
            <div class="sidenav">

                <div class="sidebar-widget" style="margin: -1px 0 0 0;">
                    <h5 class="title" style="margin-bottom:0">Na skróty</h5>
                </div><!-- End .sidenav-widget -->

                <div class="mainnav">
                    {{ knp_menu_render('quickButtons', {
                        'currentAsLink' : true,
                        'template': ':Menu:main.html.twig',
                    }) }}
                </div>

                <div class="sidebar-widget" style="margin: -1px 0 0 0;">
                    <h5 class="title" style="margin-bottom:0">Nawigacja</h5>
                </div><!-- End .sidenav-widget -->

                <div class="mainnav">
                    {{ knp_menu_render('main', {
                        'currentAsLink' : true,
                        'template': ':Menu:main.html.twig',
                    }) }}
                </div>

                <div class="sidebar-widget" style="margin: -1px 0 0 0;">
                    <h5 class="title" style="margin-bottom:0">Ustawienia</h5>
                </div><!-- End .sidenav-widget -->

                <div class="mainnav">
                    {{ knp_menu_render('settings', {
                        'currentAsLink' : true,
                        'template': ':Menu:main.html.twig',
                    }) }}
                </div>

                <div class="sidebar-widget" style="margin: -1px 0 0 0;">
                    <h5 class="title" style="margin-bottom:0">Użytkownik</h5>
                </div><!-- End .sidenav-widget -->

                <div class="mainnav">
                    {{ knp_menu_render('user', {
                        'currentAsLink' : true,
                        'template': ':Menu:main.html.twig',
                    }) }}
                </div>
            </div>
        </div>
    {% endif %}

        <div id="content" class="clearfix">
            <div class="contentwrapper">
                {% block content %}
                    {% block body %}{% endblock %}
                {% endblock content %}
            </div>
        </div>

    </div>

    {% block javascripts %}
        {% if app.environment == "prod" %}
        <script type="text/javascript" src="{{ asset("/js/vendors.min.js") }}"></script>
        <script type="text/javascript" src="{{ asset("/js/project.min.js") }}"></script>
        {% else %}
        <script type="text/javascript" src="{{ asset("/js/vendors.js") }}"></script>
        <script type="text/javascript" src="{{ asset("/js/project.js") }}"></script>
        {% endif %}

        <script src="{{ asset('/bundles/fosjsrouting/js/router.js') }}"></script>
        <script src="{{ path('fos_js_routing_js', {"callback": "fos.Router.setData"}) }}"></script>
    {% endblock javascripts %}
    </body>
{% endblock overraid_body %}
</html>
