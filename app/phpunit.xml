<?xml version="1.0" encoding="UTF-8"?>
<phpunit backupGlobals="false"
         backupStaticAttributes="false"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         stopOnFailure="false"
         syntaxCheck="false"
         bootstrap="bootstrap.php.cache"
        >
    <testsuites>
        <testsuite name="unit">
            <directory>../src/Gyman/Tests/Unit/**</directory>
        </testsuite>
        <testsuite name="integration">
            <directory>../src/Gyman/Tests/Integration/**</directory>
        </testsuite>
        <testsuite name="functional">
            <directory>../src/Gyman/Tests/Functional/**</directory>
        </testsuite>
    </testsuites>

    <filter>
        <whitelist processUncoveredFilesFromWhitelist="true">
            <directory suffix=".php">src/Gyman/</directory>
            <exclude>
                <directory>../src/*/*Bundle/Resources</directory>
                <directory>../src/*/*Bundle/Tests</directory>
                <directory>../src/*/Bundle/*Bundle/Resources</directory>
                <directory>../src/*/Bundle/*Bundle/Tests</directory>
            </exclude>
        </whitelist>
    </filter>

    <php>
        <server name="KERNEL_DIR" value="app/" />
    </php>
    
    <logging>
        <!--<log type="coverage-html" target="../build/report" charset="UTF-8" highlight="false" lowUpperBound="35" highLowerBound="70"/>-->
        <!--<log type="coverage-clover" target="../build/logs/clover.xml"/>-->
        <!--<log type="junit" target="../build/logs/junit.xml" logIncompleteSkipped="false"/>-->
    </logging>
    
</phpunit>
