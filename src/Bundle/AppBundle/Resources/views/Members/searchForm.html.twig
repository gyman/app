{% extends 'GymanAppBundle::layout.html.twig' %}

{% block title %}Wyszukiwanie uczestnika{% endblock %}

{% block content %}
    <div class="heading">
        <h3>Wyszukiwanie uczestnika</h3>
    </div>

    <div class="container">
        {{ form_start(form) }}

        <div class="row-fluid">
            <div class="span12">
                {{ form_row(form.query) }}
            </div>
        </div>

        <div class="row-fluid">
            <div class="span4">
                {{ form_row(form.section) }}
            </div>
            <div class="span4">
                {{ form_row(form.belt) }}
            </div>
            <div class="span4">
                {{ form_row(form.hasVoucher) }}
                {{ form_row(form.hasOpenedEntry) }}
                {{ form_row(form.starred) }}
            </div>
        </div>

        <div class="">
            <button class="btn btn-large btn-success">{{ 'member_search_form.submit'|trans }}</button>
        </div>

        {{ form_rest(form) }}
        {{ form_end(form) }}
    </div>
{% endblock %}
