{% extends 'GymanAppBundle::layout.html.twig' %}

{% block title %}Wyszukiwanie uczestnika{% endblock %}

{% block content %}
    <div class="heading">
        <h3>Wyszukiwanie uczestnika</h3>
    </div>

    {{ form_start(form) }}

    <div class="row-fluid">
        <div class="span12">
            {{ form_row(form.query, {attr: {class: "input-xxlarge"}}) }}
        </div>
    </div>

    <div class="row-fluid">
        <div class="span4">
            {{ form_row(form.section) }}
        </div>
        <div class="span4">
            {{ form_row(form.belt) }}
        </div>
        <div class="span4">
            {{ form_row(form.hasVoucher) }}
            {{ form_row(form.hasOpenedEntry) }}
            {{ form_row(form.starred) }}
        </div>
    </div>

    <div class="form-actions">
        <button class="btn btn-large btn-success">{{ 'member_search_form.submit'|trans }}</button>
    </div>

    {{ form_rest(form) }}
    {{ form_end(form) }}
{% endblock %}
