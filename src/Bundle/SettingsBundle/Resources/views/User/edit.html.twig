{% extends 'GymanSettingsBundle::layout.html.twig' %}

{% block windowClasses %}col-sm-12 col-md-12{% endblock windowClasses %}

{% block settings_page_header %}{{ 'settings.header.edit_user'|trans  }}: {{ form.vars.value.getFullname }}{% endblock %}

{% block settings_page -%}
    {{ form_start(form) }}

    <div class="row-fluid">
        <div class="span6">
            {{ form_row(form.firstname) }}
            {{ form_row(form.lastname) }}
            {{ form_row(form.username) }}
            {{ form_row(form.email) }}
            {{ form_row(form.plainPassword) }}
            {{ form_row(form.enabled) }}
        </div>
        <div class="span6">
            {{ form_row(form.roles) }}
            {{ form_row(form.sections, {label: "Przypisz jako instruktora w poniższych sekcjach"}) }}
        </div>
    </div>

    <div class="form-actions">
        <button class="btn">Prześlij</button>
        <a href="{{ path('admin_users') }}" class="pull-right">Powrót do listy</a>
    </div>

    {{ form_end(form) }}


{% endblock %}
