{% extends 'GymanSettingsBundle::layout.html.twig' %}
{# @var section \Gyman\Domain\Section #}
{# @var member \Gyman\Domain\Member #}
{% block settings_page %}

{{ form_start(form) }}

<div class="row-fluid">
    <div class="span6">
        {{ form_row(form.instructor) }}
        {{ form_row(form.title) }}
    </div>

    <div class="span5 offset1">
        <table class="table table-striped table-bordered">
            <thead>
            <tr>
                <th>Imię i nazwisko uczestnika</th>
            </tr>
            </thead>
            <tbody>
            {% for member in section.members if section.members|length > 0%}
                <tr>
                    <td>{{ loop.index }}. <a href="{{ path("gyman_member_edit", {"id" : member.id}) }}">{{ member.details.fullName }}</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>

<div class="form-actions">
    <button>Zapisz</button>
    <a href="{{ path('gyman_settings_sections') }}" class="pull-right">Powrót do listy</a>
</div>

{{ form_end(form) }}
{% endblock settings_page %}

