{% extends "base.html.twig" %}

{% block body_class %}dashboard{% endblock %}

{% block body %}

<div class="heading">

    <h3>Pulpit nawigatora</h3>                    

</div><!-- End .heading-->

<div class="form-row row-fluid">

    {% if filters|length > 0 %}
    <div class="box span6">
        <div class="title"><h4><span>Filtry uczestnik√≥w</span></h4></div>
        <div class="content">
            <ul class="bigBtnIcon">
                {% for filter in filters if filter.listname == "members" %}
                <li>
                    <a class="tipB" href="{{ path("_filter_set",{id: filter.getId(), listname : "members"}) }}">
                        <span class="icon icomoon-icon-stats-up"></span>
                        {# <span class="notification">5</span> #}
                    </a>
                    <div>{{ filter.getName() }}</div>
                </li>
                {% endfor %}
            </ul>
        </div>
    </div>
    {% endif %}
    {% if events|length > 0 %}
    <div class="span6">
        {% include "DashboardBundle:Default:activities.html.twig" %}
    </div>
    {% endif %}
    <div class="span6">
        {% include "DashboardBundle:Default:popularActivities.html.twig" %}
    </div>
</div>
{% endblock body %}

{% block javascripts %}
{{ parent() }}
{% javascripts
    "@DashboardBundle/Resources/public/coffee/dashboard.coffee"
    "@DashboardBundle/Resources/public/coffee/ActivityTab.coffee"
 %}
<script src="{{ asset_url }}"></script>
{% endjavascripts %}
{% endblock %}