{% extends "base.html.twig" %}

{% block body %}
<div class="heading">
    <h3>{% block headingTitle %}{% endblock %}</h3>
    
    {% block buttonHeading %}
    <a href="{% block buttonPath %}{% endblock %}" class="btn pull-right {% block buttonClasses %}{% endblock %}" id="{% block buttonId %}{% endblock %}">
        <span class="icon32 icomoon-icon-new green"></span>
        {% block buttonLabel %}{% endblock %}
    </a>
    {% endblock %}
    
</div><!-- End .heading-->

<!-- Build page from here: Usual with <div class="row-fluid"></div> -->


<div class="row-fluid">

    <div class="span12">

        <div class="box gradient">

            <div class="title">
                {% block listHeaderRightToolbox %}{% endblock %}
                {% block listHeaderFilter %}{% endblock %}
                <h4>
                    <span>{% block listTitle %}{% endblock%}</span>
                </h4>
            </div>

            <div class="content noPad clearfix">
                {% block listTable %}
                <table
                    cellpadding="0" cellspacing="0" border="0"
                    width="100%"
                    class="{% block listTableClass %}dynamicTable display table table-bordered{% endblock %}"
                    id="{% block listTableId %}{% endblock %}"
                    {% block listTableAttr %}{% endblock %}>
                    <thead>
                        {% block listThead %}{% endblock %}
                    </thead>
                    <tbody>
                        {% block listTbody %}{% endblock %}
                    </tbody>
                </table>
                {% endblock %}
            </div>

        </div><!-- End .box -->

    </div><!-- End .span12 -->

</div><!-- End .row-fluid -->
{% endblock body %}

{# javascripts #}

{% block javascripts %}
    {{ parent() }}

    {% javascripts
        '@LayoutBundle/Resources/public/plugins/tables/dataTables/jquery.dataTables.js'
     %}

<script src="{{ asset_url }}"></script>

    {% endjavascripts %}
{% endblock javascripts %}

{# CSS #}

{% block stylesheets %}
    {{ parent() }}

    {% stylesheets filter='cssrewrite'
        'bundles/layout/plugins/tables/dataTables/jquery.dataTables.css'
        filter="cssrewrite"
    %}

<link rel="stylesheet" href="{{ asset_url }}" />

    {% endstylesheets %}
{% endblock stylesheets %}