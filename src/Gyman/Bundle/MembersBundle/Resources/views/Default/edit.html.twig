{% extends '::base.html.twig' %}

{% block content %}

    {% if not form.vars.valid %}
        <div class="alert alert-error">
            <strong>{{ 'members.modal.form_has_errors'|trans }}</strong>
            {{ form_errors(form) }}
        </div>
    {% endif %}

    {{ form_start(form, {
        attr : {
            'id' : "memberForm",
            'class' : "form-horizontal row-fluid"
        },
        action : path('_member_edit', {"id" : member.id})
    }) }}

    {%  include "@Members/Default/member_form_inner.html.twig" %}

{% block modal %}
<div class="hidden" id="ui-editMemberData">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h3>{% block modalTitle %}{{ 'member.modal.edit_user_title'|trans({ '%member_name%': member.getName()}) }}{%endblock modalTitle%}</h3>
    </div>
    <div class="modal-footer">
        <form id="deleteForm" class="pull-left">
            <label>
                <input type="checkbox" id="deleteCheckbox" />
                {{ 'member.modal.remove_user_checkbox_label'|trans }}
            </label>
        </form>
        <a href="#" class="btn btn-primary pull-right" id="saveFormInModal">
            {{ 'member.modal.save_button_label'|trans }}
        </a>
    </div>
</div>
{% endblock modal %}


{% endblock content %}
