<table cellpadding="0" cellspacing="0" border="0" class="dynamicTable display table table-bordered" width="100%" id="entriesTable">
    <thead>
        <tr>
            <th>Dzień i godzina</th>
            <th>Zajęcia</th>
            <th>Płatność</th>
        </tr>
    </thead>
    <tbody>
        {% if member.entries|length > 0 %}
            {% for entry in member.entries %}
            <tr>
                <td>{{ entry.getCreated()|date("d.m.y (l) H:i") }}</td>
                <td>
                    {% if entry.occurence %}
                        {{ entry.occurence.event.activity.name }}
                    {% endif %}
                </td>
                <td>{{ entry.getEntryType() }}</td>
            </tr>
            {% endfor %}
        {% endif %}
    </tbody>
</table>

<script>
$(function(){
    $("table#entriesTable").dataTable();
});
</script>
