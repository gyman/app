{% extends "MembersBundle:Default:edit.html.twig" %}

{% block title %}
    {{ parent() }} - Dodaj użytkownika
{% endblock title %}

{% block content %}
    <div class="contentwrapper">

        <div class="heading">

            <h3>Dodaj użytkownika</h3>

        </div>

        <div class="span12">
        {% include "::_flash.html.twig" %}

        {{ form_start(form, {
            attr : {
                'id' : "memberForm",
                'class' : "form-horizontal row-fluid",
                'novalidate' : 'NOVALIDATE'
            },
            action : path('_member_new'),
            method : 'POST'
        }) }}

        {%  include "@Members/Default/member_form_inner.html.twig" %}

        </div>

    </div>

{% endblock %}

{% block birthday %}
    {{ form_row(form.birthdate,{"label" : "member.modal.birthday_label"|trans, "attr": { "value" : null }}) }}
{% endblock birthday %}

{% block modal %}
{% endblock modal %}

{% block memberToolbox %}
    <label for="sell_voucher_after_creation">
        <input type="checkbox" checked="CHECKED" value="1" name="sell_voucher_after_creation" />
        {{ 'members.new.sell_voucher_after_creation' | trans }}
    </label>

    <a href="#" class="btn btn-primary pull-right" id="saveFormInModal">{{ "member.modal.save_button_label"|trans }}</a>
{% endblock memberToolbox %}
