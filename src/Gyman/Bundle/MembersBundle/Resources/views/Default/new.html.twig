{% extends "MembersBundle:Default:edit.html.twig" %}

{% block action %}{{ path("_member_new") }}{% endblock action %}
{% block method %}post{% endblock method %}

{% block modal %}
<div class="hidden" id="ui-editMemberData">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h3>{% block modalTitle %}{{ "member.modal.new_user_title"|trans }}{%endblock modalTitle%}</h3>
    </div>
    <div class="modal-footer">
        <a href="#" class="btn btn-primary pull-right" id="saveFormInModal">{{ "member.modal.save_button_label"|trans }}</a>
    </div>
</div>
{% endblock modal %}

{% block birthday %}
    {{ form_row(form.birthdate,{"label" : "member.modal.birthday_label"|trans, "attr": { "value" : null }}) }}
{% endblock birthday %}

{% block memberToolbox %}
    <label for="sell_voucher_after_creation">
        <input type="checkbox" checked="CHECKED" value="1" name="sell_voucher_after_creation" />
        {{ 'members.new.sell_voucher_after_creation' | trans }}
    </label>
{% endblock memberToolbox %}
