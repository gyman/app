                    <ol>
                        {% for entry in creditEntries if creditEntries|length > 0 %}
                        <li>
                            <strong>{{ entry.startDate|date("Y-m-d H:i") }}</strong> na <strong>{{ entry.occurrence.event.title }}</strong>
                            (sekcja: {{ entry.occurrence.event.calendar.name }})
