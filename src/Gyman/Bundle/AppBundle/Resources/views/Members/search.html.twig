{% extends 'GymanAppBundle::layout.html.twig' %}

{% block title %}
    Wyniki wyszukiwania
{% endblock %}

{% block content %}
<div class="contentwrapper">
    <div class="heading">
        <h3>Wyniki wyszukiwania</h3>
    </div>

    <div class="span12">
        <ul class="thumbnails">
            {% for member in members %}
                <li class="span3" style="text-align: center">
                    <div class="thumbnail">
                        <a href="{{ path('gyman_member_edit', {id : member.id}) }}">
                            <img src="{{ member.details.foto.fotoWithPath }}" style="max-height: 200px" />
                        </a>
                        <div class="caption">
                            <h3>
                                {{ member.details.lastname }} {{ member.details.firstname }}
                            </h3>
                            <p>
                                jaki≈õ opis
                            </p>
                        </div>
                    </div>
                </li>
            {% endfor %}
        </ul>
    </div>
</div>
{% endblock %}

