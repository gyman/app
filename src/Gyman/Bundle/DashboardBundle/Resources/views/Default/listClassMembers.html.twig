{% extends "DashboardBundle::layout.html.twig" %}

{% block content %}
<div class="heading">
    <h3>
        {{ occurrence.startDate|date("y.m.d H:i") }}:
        {{ occurrence.event.title }}
    </h3>
</div>

<div class="span12">
    Uczestnicy:

    <ol>
    {% for entry in get_entries(occurrence) %}
        <li>
            <img src="{{ entry.member.details.foto.fotoWithPath() }}" style="height: 20px"/>
            <a href="{{ path("gyman_member_edit", {id: entry.member.id()}) }}">
                {{ entry.member.details.firstname }}
                {{ entry.member.details.lastname }}
            </a>
            {% if entry.member.currentVoucher is not null %}
            , karnet wa≈ºny od
            <strong>{{ entry.member.currentVoucher.startDate|date("Y-m-d") }}</strong>
                do
            <strong>{{ entry.member.currentVoucher.endDate|date("Y-m-d") }}</strong>
            {% endif %}
        </li>
    {% endfor %}
    </ol>
</div>

{% endblock content %}

